local({
#  r <- getOption("repos")
  r <- c(INLA = "https://inla.r-inla-download.org/R/testing",
         CRAN = "https://cloud.r-project.org/")
    options(repos = r)
})

local({
  home <- R.home()
  new_lib <- NULL
  if (length(grep(paste0("unstable"), R.version$version.string) == 1)) {
    ver <- "R-devel"
  } else {
    ver <- paste0("R-", R.version$major, ".", R.version$minor)
  }
  # Check if path is like ".../local/ver/lib/R"
  if (length(grep(paste0("/local/", ver, "/lib/R"), home) == 1)) {
    new_lib <- gsub("/local/.*/lib/R", paste0("/local/", ver, "/Rlib"), home)
  }
  .libPaths(c(new_lib, .libPaths()))
})
